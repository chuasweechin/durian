<!-- Start: age Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-12">

    	<!-- Start: Hero Banner -->
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
									<%= image_tag "hero/banner1.jpg", class: "carouselImage"%>
                </div>
              </div>
            </div>
      <!-- End: Hero Banner -->

      <div class="row">

      	<% @durians.each do |durian| %>
	      	<div class="col-lg-4 col-md-6 mb-4">
	          <div class="card h-100">
	          	<%= image_tag(durian.image_url) %>
	            <div class="card-body">
	              <h4 class="card-title">
	                <%= durian.name %>
	              </h4>
	              <h5><%= "$" + (durian.price_per_kg/100).to_s %>/kg</h5>
	              <p class="card-text"><%= durian.description %></p>
	            </div>
	              <div class="addCartButton">
	                <div class="float-right">
	                	<%= form_with scope: :durian, url: shoppingcarts_add_path, class: "durian-form", local: true do |form| %>
										<%= form.hidden_field :id, :value => durian.id %>
										<%= form.hidden_field :name, :value => durian.name %>
										<%= form.hidden_field :image_url, :value => durian.image_url %>
								    <%= form.hidden_field :price_per_kg, :value => durian.price_per_kg %>
								    <%= form.hidden_field :weight, :value => 1 %>
								    <%= form.submit 'Add to cart', class: "btn btn-success btn-sm", "role" => "button", "data-container" => "body", "data-toggle" => "popover", "data-trigger" => "focus" ,"data-placement" => "top", "data-content" => "Added 1 kg of #{ durian.name } to your cart!", data: { disable_with: false } %>


								<% end %>
	                </div>
	              </div>
	            <div class="card-footer">
	            	<%	sweetness_rating = ""
	            		(1..5).each do |number|
		            		if number <= durian.sweet.name.to_i
		            			sweetness_rating += " ★"
		            		else
		            			sweetness_rating += " ☆"
		            		end
	            		end
	            	%>
	              <small class="text-muted">Sweetness <%= sweetness_rating%></small>

	              <br>
	              <%	creaminess_rating = ""
	            		(1..5).each do |number|
		            		if number <= durian.cream.name.to_i
		            			creaminess_rating += " ★"
		            		else
		            			creaminess_rating += " ☆"
		            		end
	            		end
	            	%>
	            	<small class="text-muted">Creaminess <%= creaminess_rating%></small>
	            </div>
	          </div>
	        </div>
	      <% end %>

			<br>

      </div>
      <!-- /.row -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
</div>
<!-- End: Page Content -->

